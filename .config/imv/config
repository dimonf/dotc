[options]

# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true
overlay_font = Monospace:10

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
# Define some key bindings
q = quit
y = exec cp "$imv_current_file" ~/Videos/00/
z = exec echo "$imv_current_file" > /tmp/curr_media_file

# Image navigation
#<Left> = prev
#<bracketleft> = prev
#<Right> = next
#<bracketright> = next
p = prev
n = next
h = prev
l = next
<Shift+H> = prev 10
<Shift+L> = next 10
gg = goto 1
<Shift+G> = goto -1

# Panning
<Meta+j> = pan 0 -50
<Meta+k> = pan 0 50
<Meta+h> = pan 50 0
<Meta+l> = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
<Shift+K> = zoom 1
<Shift+J> = zoom -1
o = zoom -1
1 = zoom actual

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other commands
x = close
f = fullscreen
d = overlay
#p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
#

